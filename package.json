{
  "name": "initiator",
  "title": "The modern front-end boilerplate of the future",
  "url": "http://initiator.justynclark.com",
  "author": "Justyn Clark",
  "copyright": "2017",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "git+https://github.com/justyn-clark/initiator.git",
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "browser-sync": "^2.18.13",
    "chokidar-cli": "^1.2.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.1.0"
  },
  "scripts": {
    "start": "npm-run-all -p sync js sass sass:watch autoprefixer",
    "sync": "browser-sync start --server --files \"*.html, app/bundle.js, app/app.css\"",
    "js": "babel src/js --watch -o app/bundle.js --source-maps --presets env",
    "sass:watch": "node-sass --watch src/**/*.scss app/app.css",
    "sass": "node-sass src/**/*.scss app/app.css",
    "autoprefixer": "chokidar 'src/**/*.scss' -c 'npm run postcss'",
    "postcss": "postcss app/*.css --use autoprefixer -d app"
  }
}
