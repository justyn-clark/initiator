{
  "name": "initiator",
  "title": "The modern front-end boilerplate of the future",
  "url": "http://initiator.justynclark.com",
  "author": "Justyn Clark",
  "copyright": "2017",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justyn-clark/initiator.git"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.17.3",
    "node-sass": "^3.10.1",
    "nodemon": "^1.11.0",
    "uglify-js": "^2.7.4",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "jquery": "^3.1.1"
  },
  "scripts": {
    "build-js": "browserify src/js/app.js -t [ babelify --presets [ es2015 ] ] | uglifyjs -cm  > app/bundle.js",
    "build-css": "node-sass --include-path scss src/**/*.scss app/app.css",
    "build": "npm run build-js && npm run build-css",
    "watch-js": "watchify src/js/app.js --o app/bundle.js -t -v [ babelify --presets [ es2015 ] ]",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "start": "npm run sync & npm run watch-js & npm run watch-css",
    "sync": "browser-sync start --server --files \"*.html, app/*.js, app/*.css\""
  }
}
